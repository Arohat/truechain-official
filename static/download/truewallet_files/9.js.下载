function goDown(item,event){

if(event.target.tagName != "A"){
var url = $(item).find(".urlAdd").text();
    location.href = url;
}
    
}

//游戏分类 收起  展开
$(function(){
 var slideHeight = 170; // px
 var defHeight = $('#wrap').height();
 if(defHeight >= slideHeight){
  $('#wrap').css('height' , slideHeight + 'px');
  $('#read-more').append('<a href="#" style=" color: #378f12;">+展开全部内容</a>');
  $('#read-more a').click(function(){
   var curHeight = $('#wrap').height();
   if(curHeight == slideHeight){
    $('#wrap').animate({
     height: defHeight
    }, "normal");
    $('#read-more a').html('收起部分内容');
    $('#gradient').fadeOut();
   }else{
    $('#wrap').animate({
     height: slideHeight
    }, "normal");
    $('#read-more a').html('+展开全部内容');
    $('#gradient').fadeIn();
   }
   return false;
  });  
 }
});
